{
    "extends": ["stylelint-config-standard"],
    "plugins": ["stylelint-order"],
    "rules": {
        "selector-no-qualifying-type": true,
        "font-family-name-quotes": "always-unless-keyword",
        "declaration-no-important": true,
        "order/order": [
            "custom-properties",
            "dollar-variables",
            "declarations",
            "rules",
            "at-rules"
        ]
    }
}
